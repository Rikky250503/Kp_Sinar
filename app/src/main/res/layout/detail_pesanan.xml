<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_tulisanPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="PT Abadi Jaya"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/iv_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_tanggal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="16/03/2024"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/tv_tulisanPT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Menunggu dikirim"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/tv_tanggal_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TableLayout
        android:id="@+id/tl_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>
            <TextView
                android:id="@+id/tv_jenis"
                android:text="Jenis"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tidu1"
                android:text="\t\t\t\t:"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_isiJenis"
                android:text="Semen Portland Komposit"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_jumlah"
                android:text="Jumlah"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tidu2"
                android:text="\t\t\t\t:"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_isiJumlah"
                android:text="5"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_pembayaran"
                android:text="Pembayaran"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tidu3"
                android:text="\t\t\t\t:"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_isiPembayaran"
                android:text="Cash"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_total"
                android:text="Total"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tidu4"
                android:text="\t\t\t\t:"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_isiTotal"
                android:text="Rp.1.200.000"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/iv_garisRute"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_lurus_rute"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_detail"
        >
    </ImageView>

    <ImageView
        android:id="@+id/iv_icon_menunggu_pengiriman"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/menunggu_pengiriman"
        android:layout_marginStart="82dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_garisRute"
        >
    </ImageView>

    <ImageView
        android:id="@+id/iv_icon_pesanan_dikirim"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pesanan_dikirim"
        android:layout_marginTop="18dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_garisRute"
        >
    </ImageView>

    <ImageView
        android:id="@+id/iv_icon_pesanan_diterima"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pesanan_diterima"
        android:layout_marginEnd="78dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_garisRute"
        >
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="UBAH"
        android:textStyle="bold"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/blue_250"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>