<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_stok_pimpinan"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_stok_gudang"
        >

        <TextView
            android:id="@+id/tv_id_pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/box_stok_pimpinan"

            />

        <TextView
            android:id="@+id/tv_nama_stok_pimpinan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/box_stok_pimpinan"
            />

        <TextView
            android:id="@+id/namaStokBarangPimpinan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seng Atap 6 kaki"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_stok_pimpinan"
            app:layout_constraintStart_toStartOf="@+id/box_stok_pimpinan"
            />

        <TextView
            android:id="@+id/tv_stok_pimpinan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="@+id/box_stok_pimpinan"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/jumlah_stok_pimpinan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="@id/tv_stok_pimpinan"
            app:layout_constraintEnd_toEndOf="@id/box_stok_pimpinan"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>