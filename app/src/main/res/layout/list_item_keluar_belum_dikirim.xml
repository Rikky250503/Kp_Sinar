<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_barang_keluar_belum_dikirim"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_stok_gudang"
        >

        <TextView
            android:id="@+id/tv_id_belum_dikirim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/box_barang_keluar_belum_dikirim"

            />

        <TextView
            android:id="@+id/tv_namaPT_belumdikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT. Cahaya Makmur"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/box_barang_keluar_belum_dikirim"
            />

        <TextView
            android:id="@+id/tv_namaBarang_belum_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seng Atap 9'"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_namaPT_belumdikirim"
            app:layout_constraintStart_toStartOf="@+id/box_barang_keluar_belum_dikirim"
            />

        <TextView
            android:id="@+id/tv_namaBarang2_belum_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semen Portland Komposit"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_namaBarang_belum_dikirim"
            app:layout_constraintStart_toStartOf="@+id/box_barang_keluar_belum_dikirim"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>