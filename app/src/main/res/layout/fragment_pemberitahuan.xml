<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D2E3EA"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_logo_stok_pemberitahuan"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@drawable/img_4"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/iv_logout_stok_barang"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_stok_barang"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/rounded_corners"
        android:elevation="500dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/tv_stok_barang_pemberitahuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEMBERITAHUAN"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@id/box_stok_barang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ScrollView
            android:id="@+id/sv_isi_stok_pemberitahuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_stok_barang_pemberitahuan"
            android:layout_marginBottom="135dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_stok_pemberitahuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_stok_barang_pemberitahuan"
                tools:listitem="@layout/list_item_pemberitahuan"
                tools:itemCount="10">

            </androidx.recyclerview.widget.RecyclerView>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>