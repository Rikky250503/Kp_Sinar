<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.NotaPenjualanActivity">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/img_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_judulPenjualan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTA PENJUALAN"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/sv_nota1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_judulPenjualan"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_nota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_invoice_nota"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toTopOf="@id/card_nota1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_invoice_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="No Invoice"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_invoice_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_invoice_nota"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh: SG001" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_namaCustomer_nota"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_invoice_nota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_namaCustomer_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Nama Customer"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_namacustomer_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_namaCustomer_nota"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh: Yati" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_alamat_nota"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_namaCustomer_nota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_alamat_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Alamat"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_alamat_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamat_nota"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh: Jl. Pasar 16 Ilit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_nohp_nota"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_alamat_nota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_nohp_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="No Handphone"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_nohp_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_nohp_nota"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh: 081234567890" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_tglPesan_nota"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_nohp_nota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_tglPesan_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Tanggal Pemesanan"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_tglPesan_nota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_tglPesan_nota"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh: 2024-03-02" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_selesai"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/sv_nota1"
        android:layout_marginHorizontal="72dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="NEXT"
        android:backgroundTint="#AEC8D7"/>

</androidx.constraintlayout.widget.ConstraintLayout>