<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TambahSupplierActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/img_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_tambah_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPPLIER BARU"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tambah_supplier">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_Supplier"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toTopOf="@id/card_supplier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_tgl_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Nama Supplier"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_nama_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_tgl_restock"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:Yanti" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_no_hp_supplier"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_Supplier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_no_hp_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="No Handphone"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_no_hp_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_hp_supplier"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:Seng atap 7'"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_alamat_supplier"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_no_hp_supplier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_alamat_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Alamat"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_alamat_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamat_supplier"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tambah_supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="72dp"
        android:layout_marginBottom="24dp"
        android:text="Tambah"
        app:layout_constraintTop_toBottomOf="@id/card_supplier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="12dp"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:backgroundTint="#AEC8D7"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>