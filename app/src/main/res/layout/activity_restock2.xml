<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.RestockActivity2">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/img_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_judul_restock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTOCK"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_restock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_judul_restock2"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_namabarang_restock"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toTopOf="@id/card_restock2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_namaBarang_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Nama Barang"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_namaBarang_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_namaBarang_restock"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:Seng atap 7'"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_hargaSatuan_restock"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_namabarang_restock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_hargaSatuan_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Harga Satuan"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_hargaSatuan_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hargaSatuan_restock"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_Kuantitas_restock"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_3"
                app:layout_constraintTop_toBottomOf="@id/box_hargaSatuan_restock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="12dp">

                <TextView
                    android:id="@+id/tv_Kuantitas_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:text="Kuantitas"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_Kuantitas_restock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_Kuantitas_restock"
                    android:layout_marginHorizontal="12dp"
                    android:hint="Contoh:2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="____________________________________________________"
        app:layout_constraintTop_toBottomOf="@id/card_restock2"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_total_restock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/strip"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_angkaRupiah_restock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.200.000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/strip"
        android:layout_marginTop="20dp"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_selesai_restock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total_restock"
        android:layout_marginHorizontal="72dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Selesai"
        android:backgroundTint="#AEC8D7"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>