<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pemberitahuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/iv_lonceng_pemberitahuan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/lonceng_pemberitahuan"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_pemberitahuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan PT.Abadi Jaya"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/iv_lonceng_pemberitahuan"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_pemberitahuan_bawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="telah diubah"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_lonceng_pemberitahuan"
        app:layout_constraintTop_toBottomOf="@id/tv_pemberitahuan"
        />

    <TextView
        android:id="@+id/tv_tgl_pemberitahuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03 Apr"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>